<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="system-menu" label="System">
		<item label="GTK+ Theme Configuration">
			<action name="Execute">
				<execute>
					lxappearance
				</execute>
			</action>
		</item>
		<item label="tint2 Configuration">
			<action name="Execute">
				<execute>
					/usr/bin/tint2conf
				</execute>
			</action>
		</item>
		<item label="Openbox Key Editor">
			<action name="Execute">
				<execute>
					obkey
				</execute>
			</action>
		</item>
		<item label="Openbox Menu Editor">
			<action name="Execute">
				<execute>
					obmenu
				</execute>
			</action>
		</item>
		<item label="Openbox Configuration Manager">
			<action name="Execute">
				<command>
					obconf
				</command>
				<startupnotify>
					<enabled>
						yes
					</enabled>
				</startupnotify>
			</action>
		</item>
		<item label="Edit Openbox rc.xml">
			<action name="Execute">
				<execute>
					gvim /home/davidosomething/.config/openbox/rc.xml
				</execute>
			</action>
		</item>
		<separator/>
		<item label="Reconfigure Openbox">
			<action name="Reconfigure"/>
		</item>
	</menu>
	<menu id="root-menu" label="Openbox 3">
		<separator label="Applications"/>
		<item label="Terminal">
			<action name="Execute">
				<execute>
					xterm
				</execute>
			</action>
		</item>
		<item label="Internet">
			<action name="Execute">
				<execute>
					chromium
				</execute>
			</action>
		</item>
		<item label="File Manager">
			<action name="Execute">
				<execute>
					marlin /hd2/
				</execute>
			</action>
		</item>
		<menu id="system-menu"/>
		<separator/>
		<item label="Log Out">
			<action name="Exit">
				<prompt>
					yes
				</prompt>
			</action>
		</item>
	</menu>
</openbox_menu>
