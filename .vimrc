" .vimrc
set nocompatible

" appearance
syntax enable
set number
set showcmd
set ruler
set textwidth=80
set background=dark
colorscheme solarized

" search
set hlsearch
set incsearch
set ignorecase
set smartcase

" tabs
set tabstop=2
set shiftwidth=2
set smarttab
set expandtab
set autoindent
filetype plugin indent on
